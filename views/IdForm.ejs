<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>ID Form</title>

        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>
    </head>
    <style>
        .paragraph{
            display: block;
            margin-left: auto;
            margin-right: auto;
            color: white;
            font-size: large;
        }

        .form-select{
            margin: 0 auto;
            float: none;
            width: 55rem;
        }

        .btn{
         
            background-color: white;
            border: 1px solid #bfc0bf;
            color: rgb(0, 174, 255);
            border-radius: 40px;
            width: 5rem;
        }

        #buttons{
            display: block;
            margin-left: auto;
            margin-right: auto;
        }
        h1{
            font-size: 1.5rem;
        }
        
        #input {
            display: block;
            margin-right: auto;
            margin-left: auto;
            margin-bottom: -1rem;
            width: 50rem;
        }

        .confirmation{
            align-content: center;
            text-align: center;
        }

        i{
            margin-left: 17rem;
        }
    </style>
    <body>
        <section>
            <nav class="navbar navbar-expand-lg navbar-success bg-success">
                <div class="container-fluid">
                    <div class="paragraph">
                        <p>South African COVID-19 Vaccination Programme Registration</p>
                    </div>
                    <form class="d-flex">
                      <button class="btn btn-outline-light" type="submit">English</button>
                    </form>
                  </div>
                </div>
            </nav>
        </section>
        <section>
            <div class="container">
                </br>
                    <h1 style="text-align: center">Step 2 of 8: General Information</h1>
                </br>
                <form>
                    <input id="input" placeholder="ID Number"><br><br>
                    <input id="input" placeholder="Passport number (optional)" required><br><br>
                    <input id="input" type="date" placeholder="Date of Birth"><br><br>
                    <input id="input" placeholder="First name(s)"><br><br>
                    <input id="input" placeholder="surname"><br><br>
                    <input id="input" list="browsers" name="browser" placeholder="Gender">
                    <datalist id="browsers">
                        <option value="Male">
                        <option value="Female">
                    </datalist>
                    </br></br>
                    <div class="confirmation">
                        <p>I confirm that the information provided is correct<input style="margin-left: 2rem;" type="checkbox"></p>
                    </div>
                </form>
                <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                    <button class="btn btn-secondary me-md-2" type="button" onclick="location.href='/method-of-identification'">Back</button>
                    <button class="btn btn-secondary" type="button" onclick="location.href='/contact-details'">Next</button>
                </div>
            </div>
        </section>

        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js" integrity="sha384-W8fXfP3gkOKtndU4JGtKDvXbO53Wy8SZCQHczT5FMiiqmQfUpWbYdTil/SxwZgAN" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.min.js" integrity="sha384-skAcpIdS7UcVUC05LJ9Dxay8AXcDYfBJqt1CJ85S/CFujBsIzCIv+l9liuYLaMQ/" crossorigin="anonymous"></script>
    </body>
</html>
